<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/GeneralMedium" />
            <gradient android:angle="-90" android:startColor="@color/GeneralDark1" android:endColor="@color/GeneralFair1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/GeneralMedium" />
            <solid android:color="@color/GeneralDark2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/GeneralMedium" />
            <gradient android:angle="-90" android:startColor="@color/GeneralFair2" android:endColor="@color/GeneralDark2" />
        </shape>
    </item>
</selector>