<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/YellowMedium" />
            <gradient android:angle="-90" android:startColor="@color/YellowDark1" android:endColor="@color/YellowFair1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/YellowMedium" />
            <solid android:color="@color/YellowDark2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/YellowMedium" />
            <gradient android:angle="-90" android:startColor="@color/YellowFair2" android:endColor="@color/YellowDark2" />
        </shape>
    </item>
</selector>